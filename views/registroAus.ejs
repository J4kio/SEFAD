    <link rel="stylesheet" href="css/registroAus.css">

</head>

<body>

    <!-- Section heading  -->
    <header>
        <div class="header-logo">
     
                <img src="images/sefad.jpg" alt="Logo SEFAD">
   

        </div>

    </header>

    <h1>Registro de Ausentes</h1>
    <div id="contenedor_fecha_hora" class="contenedor_fecha_hora">
       
        <p id="fecha_hora"></p>     
        <a href="/">Salir</a>

    </div> 
   

    <div class="contenedor">

        <label>
            Seleccione el tipo de dato<span class="req">(*)</span>
        </label>
        <select name="tipo" class="form-select" aria-label="Default select example">
            <option value="id"> Id del Estudiante</option>
            <option value="nombre"> Nombre Completo</option>
            <option value="email"> Correo Electronico</option>
            <option value="telefono">Telefono</option>

        </select>

        <input class="form-control" id="dato" type="text"  placeholder="Dato" />



        <button id="boton1" class="btn btn-primary w-50">Registrar</button>
    </div>


    <script src="js/registroAus.js"></script>

</body>

